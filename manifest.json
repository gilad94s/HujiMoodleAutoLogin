{
  "name": "Moodle auto login",
  "version": "1.0",
  "description": "Periodically log in the your huji moodle account! \nWarning: this extension saves your moodle password in plain text.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "alarms",
    "storage",
    "https://moodle2.cs.huji.ac.il/nu19/login/index.php",
    "https://moodle2.cs.huji.ac.il/nu19/"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "Webp.net-resizeimage.png"
  },
  "manifest_version": 2
}
